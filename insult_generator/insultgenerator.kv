#:kivy 1.9.2

#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<MainScreenButton@Button>:
	on_press: app.root.current = "insultscreen" 

<ShakeButton@Button>:

<FavoriteButton@Button>:

<PageButton@Button>:

ScreenManagment:
	transition: FadeTransition()
	MainScreen:
	InsultScreen:

<MainScreen>:
	name: "main"
	BoxLayout:
		orientation: "vertical"
		Label: 
			text: "Insult Ganerator"
		MainScreenButton:
			text: "enter"
		

<InsultScreen>:
	name: "insultscreen"
	sound_button: sound
	screen_name: sc_name
	screen_left: sc_left
	screen_right: sc_right
	generate_phrase: phrase_label
	BoxLayout:
		padding: 8
		orientation: "vertical"	

		Button:
			id: sound
			text: "sound"
			color: 0.9, 0, 0.3, 1
			on_release: root.sound_select()

		BoxLayout:
			PageButton:
				id: sc_left	
				text: root.insult_page[1]
				on_release: root.previous_screen()
				
			Label:
				id: sc_name
				text: root.insult_page[0]

			PageButton:
				id: sc_right
				text: root.insult_page[2]
				on_release: root.next_screen()
				

		Label:
			id: phrase_label

		BoxLayout:
			padding: 12
			spacing: 36		
			ShakeButton:
				text: "Insult"
				on_press: root.current_insult()
			
			ShakeButton:
				text: "Previous"
				on_press: root.previous_insult()

			ShakeButton:
				text: "Play"
				on_press: root.play_button()

			ShakeButton:
				text: "Stop"
				on_press: root.playspeech.stop_play()
			

		BoxLayout:
			FavoriteButton:
				text: "play favorite"
				on_release: root.play_favorite()

			FavoriteButton:
				text: "save as favorite"
				on_release: root.save_favorite()
				
