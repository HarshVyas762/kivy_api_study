#:kivy 1.9.2

#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<MainScreenButton@Button>:

<ShakeButton@Button>:

<FavoriteButton@Button>:

<PageButton@Button>:

<SoundButton@Button>:
	text: "sound"

<FavHeader@Label>:

<Favorites@Label>:


ScreenManagment:
	transition: FadeTransition()
	MainScreen:
	ShakespearScreen:
	PirateScreen:
	RudeScreen:
	FavoriteScreen:


<MainScreen>:
	name: "main"
	BoxLayout:
		orientation: "vertical"
		SoundButton:

		Label: 
			text: "Insult Ganerator"

		MainScreenButton:
			on_press: app.root.current = "shakespear"
			text: "shakesprear"
		MainScreenButton:
			on_press: app.root.current = "pirate"
			text: "pirate"
		MainScreenButton:
			on_press: app.root.current = "rude"
			text: "rude"
		MainScreenButton:
			on_press: app.root.current = "favorite"
			text: "favorite"

<ShakespearScreen>:
	name: "shakespear"
	BoxLayout:
		padding: 8
		orientation: "vertical"
		generat_phrase: phrase_label

		SoundButton:

		Label:
			text: "Shakespear"

		BoxLayout:
			padding: 12
			spacing: 36		
			ShakeButton:
				text: "Insult"
				on_press: phrase_label.text = root.sayit.get_current()
			ShakeButton:
				text: "Previous"
				on_press: phrase_label.text = root.sayit.get_previous()
			ShakeButton:
				text: "Stop"

		Label:
			id: phrase_label
			text: "Generated Insult"

		BoxLayout:
			FavoriteButton:
				text: "save to collection"
			FavoriteButton:
				text: "save as favorite "

		BoxLayout:
			PageButton:
				text: "<<-- favorites "
				on_press: app.root.current = "favorite"
			PageButton:
				text: "favorite"
			PageButton:
				text: "pirate-->>"
				on_press: app.root.current = "pirate"

