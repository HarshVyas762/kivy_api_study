#:kivy 1.9.2

#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<MainScreenButton@Button>:

<ShakeButton@Button>:

<FavoriteButton@Button>:

<PageButton@Button>:

<SoundButton@Button>:
	text: "sound"

ScreenManagment:
	transition: FadeTransition()
	MainScreen:
	ShakespearScreen:
	PirateScreen:
	RudeScreen:

<MainScreen>:
	name: "main"
	BoxLayout:
		orientation: "vertical"
		SoundButton:

		Label: 
			text: "Insult Ganerator"

		MainScreenButton:
			on_press: app.root.current = "shakespear"
			text: "shakesprear"
		MainScreenButton:
			on_press: app.root.current = "pirate"
			text: "pirate"
		MainScreenButton:
			on_press: app.root.current = "rude"
			text: "rude"
		

<ShakespearScreen>:
	name: "shakespear"
	BoxLayout:
		padding: 8
		orientation: "vertical"
		generat_phrase: phrase_label

		SoundButton:

		Label:
			text: "Shakespear"

		BoxLayout:
			padding: 12
			spacing: 36		
			ShakeButton:
				text: "Insult"
				on_press: phrase_label.text = root.sayit.get_current()				
			ShakeButton:
				text: "Previous"
				on_press: phrase_label.text = root.sayit.get_previous()
			ShakeButton:
				text: "play"
				on_press: root.playspeech.play_text(phrase_label.text, "en-uk", "play_file.mp3")
			ShakeButton:
				text: "Stop"
				on_press: root.playspeech.stop_play()

		Label:
			id: phrase_label
			

		BoxLayout:
			FavoriteButton:
				text: "play favorite"
				on_press: phrase_label.text = root.savefav.f_output("fav_insult.txt")
			FavoriteButton:
				text: "save as favorite"
				on_press: root.savefav.f_input("fav_insult.txt", phrase_label.text, "w")

		BoxLayout:
			PageButton:
				text: "<<-- rude"
				on_press: app.root.current = "rude"
			PageButton:
				text: "pirate-->>"
				on_press: app.root.current = "pirate"

